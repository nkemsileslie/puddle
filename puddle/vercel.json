{
    "version": 2,
    "builds": [
        {
            "src": "puddle/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "iSab", "runtime": "python3.11" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": { 
                "disDir": "staticfiles_build"
            }   
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
           "src": "/(.*)",
           "dest": "puddel/wsgi.py" 
        }
    ],
    "rewrites": [
        {"rewrites": [{
            "source": "/(.*)", 
            "destination": "/"
            }]
        }
    ]
}